{
  "name": "locomotor",
  "version": "0.1.13",
  "description": "A micro library hooks",
  "source": "index.js",
  "main": "dist/locomotor.js",
  "module": "dist/locomotor.modulejs",
  "unpkg": "dist/locomotor.umd.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server -d",
    "prebuild": "npm run lint",
    "build": "microbundle",
    "__postbundle": "uglifyjs dist/locomotor.js --pure-funcs classCallCheck -c unsafe,collapse_vars,evaluate,loops,keep_fargs=false,pure_getters,unused,dead_code,warnings -m -o dist/locomotor.js --source-map url='https://unpkg.com/locomotor@0.1.13/locomotor.js.map'",
    "dev": "microbundle watch",
    "bundle": "webpack --config webpack.bundle.js --mode production",
    "pretest": "standard test/**/*.js --fix",
    "test": "jest",
    "lint": "standard locomotor.js src/**/*.js examples/**/*.js --fix",
    "size": "npx bundlewatch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/syarul/locomotor.git"
  },
  "keywords": [
    "react",
    "jsx",
    "hooks",
    "view"
  ],
  "author": "Shahrul Nizam Selamat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/syarul/locomotor/issues"
  },
  "homepage": "https://github.com/syarul/locomotor#readme",
  "dependencies": {
    "hookuspocus": "https://github.com/syarul/hookuspocus#master",
    "set-dom": "^7.5.2",
    "virtual-dom": "https://github.com/syarul/virtual-dom"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.8.3",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.8.4",
    "@testing-library/jest-dom": "^5.11.5",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-plugin-transform-jsx": "^2.0.0",
    "bundlewatch": "^0.3.1",
    "cross-env": "^7.0.2",
    "deep-equal": "^2.0.4",
    "eslint": "^7.13.0",
    "gzip-size-cli": "^3.0.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^26.6.3",
    "microbundle": "^0.12.4",
    "pug": "^2.0.4",
    "pug-html-loader": "^1.1.5",
    "standard": "^14.3.1",
    "ts-loader": "^8.0.11",
    "typescript": "^4.0.5",
    "uglify-es": "^3.3.9",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "babel-plugin-transform-jsx",
        {
          "useVariables": true,
          "module": "locomotor"
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  },
  "__babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      [
        "@babel/plugin-transform-react-jsx",
        {
          "pragma": "Locomotor"
        }
      ]
    ]
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "bundlewatch": {
    "files": [
      {
        "path": "dist/*.*js",
        "maxSize": "20kB"
      }
    ]
  }
}
